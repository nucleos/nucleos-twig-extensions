{
    "name": "core23/twig-extensions",
    "type": "library",
    "description": "Useful extensions for twig.",
    "keywords": [
        "symfony",
        "bundle",
        "twig",
        "extensions",
        "bridge"
    ],
    "homepage": "https://core23.de",
    "license": "MIT",
    "authors": [
        {
            "name": "Christian Gripp",
            "email": "mail@core23.de"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-pcre": "*",
        "sonata-project/datagrid-bundle": "^2.3",
        "sonata-project/intl-bundle": "^2.4",
        "symfony/routing": "^3.4 || ^4.0",
        "symfony/translation": "^3.4 || ^4.0",
        "twig/twig": "^2.4"
    },
    "conflict": {
        "symfony/framework-bundle": "<3.4"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.2",

        "sllh/composer-lint": "^1.0",
        "symfony/config": "^3.4 || ^4.0",
        "symfony/dependency-injection": "^3.4 || ^4.0",
        "symfony/expression-language": "^3.4 || ^4.0",
        "symfony/framework-bundle": "^3.4 || ^4.0",
        "symfony/http-kernel": "^3.4 || ^4.0",

    },
    "suggest": {
        "symfony/framework-bundle": "If you want to use symfony"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Core23\\Twig\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Core23\\Twig\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@composer bin all install --ansi"
        ],
        "post-update-cmd": [
            "@composer bin all update --ansi"
        ]
    }
}
